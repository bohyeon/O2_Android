<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hyerimhyeon.o2_android.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/mainBlue"
                    android:text="멘토 회원정보"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="10dp"></LinearLayout>

                <ImageView
                    android:id="@+id/mentor_setting_profile_img"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:textSize="12dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/mentor_setting_mail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:hint="@string/id_hint"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="12dp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/mentor_setting_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:hint="홍길동"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴대폰 번호"
                        android:textSize="12dp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                        <TextView
                            android:id="@+id/mentor_setting_phone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="15dp"
                            android:hint="@string/phone_hint"
                            android:inputType="phone"
                            android:background="@android:color/transparent"
                            />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생년월일"
                        android:textSize="12dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                        <TextView
                            android:id="@+id/mentor_setting_birth"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="15dp"
                            android:hint="@string/birthday_hint"
                            android:inputType="date"
                            android:background="@android:color/transparent"
                            />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종목"
                        android:textSize="12dp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/mentor_setting_sport"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:hint="@string/phone_hint"
                        android:inputType="phone"
                        android:background="@android:color/transparent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지역"
                        android:textSize="12dp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/mentor_setting_region"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:background="@android:color/transparent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분야"
                        android:textSize="12dp"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/mentor_setting_mentor_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:background="@android:color/transparent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소속"
                        android:textSize="12dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/mentor_setting_company"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:hint="@string/belong_hint"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:background="@color/black"></LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

