<?xml version="1.0" encoding="utf-8"?>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detail_profile_img"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/blankimg"/>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/detail_newsfeed_lv_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/detail_newsfeed_lv_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14dp"
                            android:textColor="@color/mentoColor"
                            android:layout_marginLeft="3dp"/>

                        <TextView
                            android:id="@+id/detail_newsfeed_lv_belong"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="13dp"
                            android:textColor="@color/gray2"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/detail_newsfeed_lv_registDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="11dp"
                            android:textColor="@color/gray2"
                            android:layout_columnSpan="3"
                            android:layout_marginTop="5dp"
                            />

                    </GridLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/detail_newsfeed_lv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/gray2"/>

                <LinearLayout
                    android:id="@+id/youtube_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_border"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/youtube_img"
                        android:layout_width="200dp"
                        android:layout_height="150dp" />

                    <TextView
                        android:id="@+id/main_youtube_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>


                <ImageView
                    android:id="@+id/detail_newsfeed_lv_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:paddingBottom="10dp" />

                <TextView
                    android:id="@+id/detail_newsfeed_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋아요 10개  댓글 5개"
                    android:textSize="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray">
            </LinearLayout>



            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:columnCount="2"
                android:rowCount="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/detail_like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"
                    android:text="좋아요"
                    android:textSize="11dp"
                    />

                <TextView
                    android:id="@+id/detail_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center"
                    android:text="댓글"
                    android:textSize="11dp"/>

            </GridLayout>
        </LinearLayout>

